<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/layout_margin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/v_bookmark"
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary" />

            <ImageView
                android:id="@+id/iv_image_story"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_margin="@dimen/margin_default"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/tv_title_story"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_default"
                android:layout_marginTop="@dimen/margin_default"
                android:layout_toLeftOf="@+id/iv_image_story"
                android:layout_toRightOf="@+id/v_bookmark"
                android:text="Title"
                android:textSize="@dimen/author_size"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_author_story"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title_story"
                android:layout_toLeftOf="@+id/iv_image_story"
                android:layout_toRightOf="@id/v_bookmark"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="@dimen/margin_default"
                android:text="Author"
                android:textStyle="italic"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>